<li id="micropost-<%= micropost.id %>">
  <div class="thumb"><%= image_tag micropost.user.avatar.url(:thumb) if micropost.user.avatar? %></div>
  <div class="post">
    <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
    <div class="title"><%= link_to micropost.title, micropost_path(micropost) %></div>
    <span class="content">
      <%= truncate(micropost.content, length: 300, separator: ' ') %>
    </span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(micropost.created_at) %> ago.
      <% if current_user?(micropost.user) %>
        <%= link_to "edit", edit_micropost_path(micropost) %>
        <%= link_to "delete", micropost, method: :delete,
                                         data: { confirm: "You sure?" } %>
      <% end %>
    </span>
  </div>
</li>

