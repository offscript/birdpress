<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
    </aside>
    <div class="col-md-8" id="feedcolumn">
      <h3>BirdFeed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
 <div class="center jumbotron">
  <h1>BirdPress</h1>
  <h2>CAW!</h2>
  <%= link_to "Get Writing!", signup_path, class: "btn btn-lg btn-primary" %>
 </div>
<% end %>

